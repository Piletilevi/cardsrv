{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/Piletilevi/printsrv/json/jsonschema/plpFiscalData.json",
    "type": "object",
    "properties": {
        "operation": {
            "type": "string",
            "enum": [
                "cut",
                "endshift",
                "feed",
                "insertcash",
                "open_cashreg",
                "refund",
                "sale",
                "startshift",
                "withdrawcash",
                "xreport"
            ]
        },
        "cardPaymentUnitSettings": {
            "type": "object",
            "properties": {
                "cardPaymentUnit": {
                    "type": "string"
                }
            },
            "required": [
                "cardPaymentUnit"
            ]
        },
        "printerData": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "fiscal",
                        "anotherFiscal?"
                    ]
                },
                "printerName": {
                    "type": "string"
                },
                "printerRegNumber": {
                    "type": "string"
                },
                "comPortNumber": {
                    "type": "string"
                },
                "comPortBaudRate": {
                    "type": "string"
                },
                "readTimeout": {
                    "type": "boolean"
                },
                "writeTimeout": {
                    "type": "boolean"
                },
                "adminPw": {
                    "type": "string"
                },
                "cashierPw": {
                    "type": "string"
                },
                "certUserPw": {
                    "type": "string"
                },
                "sysAdminPw": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "printerName"
            ]
        },
        "payments": {
            "type": "array",
            "items": {
                "type": "object",
                "$ref": "plpPayment.json"
            }
        },
        "cashAmount": {"type":"number"}
    },
    "required": [
        "operation",
        "printerData"
    ]
}